<h1 class="page-header"><%= meal %></h1>
<p><a class="btn btn-primary" href="menu?option=add_menu_item&meal=<%= meal %>">Add Item</a></p>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Side</th>
            <th>Price</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
            <% menuItems.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.side %></td>
                    <td><%= item.price %></td> 
                    <td><%= item.status %></td>                
                </tr>
            <% }) %>           
    </tbody>
</table>