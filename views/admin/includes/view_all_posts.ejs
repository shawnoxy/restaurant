
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Category</th>
            <th>Status</th>
            <th>Image</th>
            <th>Comments</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        <% posts.forEach( post => { %>  
            <tr>
                <td><%= post.author %></td>
                <td><%= post.title %></td>
                <td><%= post.category %></td>
                <td><%= post.status %></td>
                <td><img class='img-responsive' style='width: 200px; height: 90px' src='..\img\blog\<%= post.image %>'></td>
                <td><%= post.comments %></td>
                <td><%= post.date %></td>            
                <td>
                    <form method="post" action="/admin/posts/publish/<%= post._id %>">
                        <a onclick="this.closest('form').submit();return false;">Publish</a>
                    </form>
                </td>
                <td>
                    <form method="post" action="/admin/posts/draft/<%= post._id %>">
                        <a onclick="this.closest('form').submit();return false;">Draft</a>
                    </form>
                </td>
                <td><a href='/admin/posts?option=edit_post&id=<%= post._id %>'>Edit</a></td>
                <td>
                    <form method="post" action="/admin/posts/delete/<%= post._id %>">
                        <a onclick="this.closest('form').submit();return false;">Delete</a>
                    </form>
                </td>
            </tr>
        <% }) %>   
         
    </tbody>
</table>